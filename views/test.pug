extends layout

block content
  if user
      .row
        .col-md-2
          .profilecenter
            img(style='border-radius: 50%', width='100', height='100', src="/profilepic/" + pic)
            .details
                h5.name  #{user.username}
                ul
                    li
        <div class="col-md-10">
          <div class="card">
            <div class="card-header">Bio</div>
            <div class="card-body">#{bio}</div>
          </div>
          <br><br>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a href="#" class="nav-link active" id="home-tab" data-toggle="tab"  role="tab" aria-controls="home" aria-selected="true">Listing</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link" id="profile-tab" data-toggle="tab"  role="tab" aria-controls="profile" aria-selected="false">Request</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link" id="contact-tab" data-toggle="tab"  role="tab" aria-controls="contact" aria-selected="false">History</a>
            </li>
          </ul>
         
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                    <div class="col-sm-6 col-md-2">
                        <div class="card">
                            <img class="card-img-top" style="height:200px;width:auto" src="{{ item['Picture'] }}" alt="Item">
                        <div class="card-body">
                            <a href="/product/" ><p class="card-title text-center" style="height:50px"></p></a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
