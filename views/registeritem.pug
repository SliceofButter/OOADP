extends layout

block content
  h3(id="meow" style="text-align:center;font-weight:bold;") Register Item
  form(method='POST', action='/registeritem', enctype='multipart/form-data')
    #form-group
      label Item Name:
      input.form-control(name='itemname',type='text')
    #form-group
      label Item Price:
      input.form-control(name='itemprice',type='number')
    #form-group
      label Description:
      input.form-control(name='description',type='text')
    #form-group
      label Item Condition:
      input.form-control(name='itemcondition',type='text', placeholder="Please state specifically about the item's condition.")
    #form-group
      label Item Category:
        <select name="category">
          <option value="Shoes">Shoes</option>
          <option value="Makeup">Makeup</option>
          <option value="FacialProducts">FacialProducts</option>
          <option value="Clothes">Clothes</option>
        </select>
    #form-group
      label Image of Item:
      br
      input(name='itemimageupload',type='file')
    br
    input.btn.btn-primary(type='submit',value='Submit')