extends layout
block content
  h1(style='text-align: center;') Account Info
  .container
    .row.profile
      .col-md-3
        .profile-sidebar
          // SIDEBAR USERPIC
          .profile-userpic
          // END SIDEBAR USERPIC
          // SIDEBAR USER TITLE
          .profile-usertitle
            .profile-usertitle-name #{user.username}
          .profile-usermenu
            ul.nav
              li
                a(href='#')
                  i.glyphicon.glyphicon-home
                  | 							Account Settings
              li.active
                a(href='/password')
                  i.glyphicon.glyphicon-user
                  | 							Password Settings
              li
                a(href='/settings')
                  i.glyphicon.glyphicon-user
                  | 							Profile Picture Settings
      .col-md-9
        .profile-content
          .container-fluid

            p
            form(action='/password', method='POST')
              #form-group
                label Password:
                input.form-control(name='password',type='password')
              #form-group
                label Confirm:
                input.form-control(name='password2',type='password')  
              <br>
                input.btn.btn-primary(type='submit',value='Submit')
