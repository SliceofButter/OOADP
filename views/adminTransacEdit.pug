extends layout

block content
  .row
    .col-md-2
    .col-md-8
      form(action='/admin/items/edit/'+doc._id, method='POST')
        .form-group
            label Item Name:
            input.form-control(type='text', name='name', value=doc.itemname) 
        .form-group
            label Itemprice:
            input.form-control(type='text', name='price', value=doc.itemprice)
        .form-group
            label Username:                        
            input.form-control(type='text', name='username', value=doc.username)    
        .form-group    
            label Description:        
            input.form-control(type='text', name='description', value=doc.description)   
        .form-group    
            label Status:        
            input.form-control(type='text', name='status', value=doc.status)
        .form-group    
            label Buyer:        
            input.form-control(type='text', name='status', value=doc.buyer)    
                                               
        button.btn.btn-primary(type='submit') Update 
    .col-md-2     