  body.animsition
    // Header
    header.header1
      // Header desktop
      .container-menu-header
        .wrap_header
          // Logo
          a.logo(href='index.html')
            img(src='images/icons/logo.png', alt='IMG-LOGO')
          // Menu
          .wrap_menu
            nav.menu
              ul.main_menu
                li
                  a(href='index.html') Home
                li
                  a(href='product.html') Shop
                li
                  a(href='about.html') About
                li
                  a(href='contact.html') Contact
              ul.nav.navbar-nav.flex-row.justify-content-between.ml-auto
          // Header Icon
          .header-icons
            a.header-wrapicon1.dis-block(style='color:black;', href='/login') Login
            span.linedivide1
            .header-icon
              a.header-wrapicon1.dis-block(style='color:black;', href='#') Register
      // Header Mobile
      .wrap_header_mobile
        // Logo moblie
        a.logo-mobile(href='index.html')
          img(src='images/icons/logo.png', alt='IMG-LOGO')
        .btn-show-menu-mobile.hamburger.hamburger--squeeze
          span.hamburger-box
            span.hamburger-inner
      // Menu Mobile
      .wrap-side-menu
        nav.side-menu
          ul.main-menu
            li.item-menu-mobile
              a(href='index.html') Home
            li.item-menu-mobile
              a(href='product.html') Shop
            li.item-menu-mobile
              a(href='product.html') Sale
            li.item-menu-mobile
              a(href='cart.html') Features
            li.item-menu-mobile
              a(href='blog.html') Blog
            li.item-menu-mobile
              a(href='about.html') About
            li.item-menu-mobile
              a(href='contact.html') Contact
    .container
      .form-group
        label(for='email') Email address:
        input#email.form-control(type='email')
      .form-group
        label(for='pwd') Password:
        input#pwd.form-control(type='password')
      .form-group.form-check
        label.form-check-label
          input.form-check-input(type='checkbox')
          |  Remember me
      button.btn.btn-primary(type='submit') Submit
