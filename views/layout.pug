  body.animsition
    // Header
    header.header1
      // Header desktop
      .container-menu-header
        .wrap_header
          // Logo
          a.logo(href='/')
            img(src='/images/icons/logo.png', alt='IMG-LOGO')
          // Menu
          .wrap_menu
            nav.menu
              ul.main_menu
                li
                  a(href='/') Home
                li
                  a(href='/product') Shop
                li
                  a(href='about.html') About
                li
                  a(href='contact.html') Contact
              ul.nav.navbar-nav.flex-row.justify-content-between.ml-auto
          // Header Icon
          if user
            li.nav-item.dropdown
              a#navbardrop.nav-link.dropdown-toggle(href='#', data-toggle='dropdown') #{user.username}
              .dropdown-menu
                a.dropdown-item(href='/profile') User Profile
                a.dropdown-item(href='/settings') Edit profile
                a.dropdown-item(href='/registeritem') Register Item
                a.dropdown-item(href='/logout') Logout
