extends layout

block content
  .row
    .col-md-2
    .col-md-6
      form(action='/profile/' +current+ '/addfunds/'+token, method='POST')
        table(style="width:100%;")
          tr
            td(style="text-align: left;padding:10px;")
              p Credit Card Payment ending in **#{shit}
            td(style="text-align: right;padding:10px;")
              p Subtotal $#{decoded}.00
          tr
            td(style="text-align: left;padding:10px;")
              p Security Code:
            td(style="text-align: right;padding:10px;")  
              
              input.form-control.expire(type='text', name='cvv', maxlength='3') 
          tr
            td(style="text-align: left;padding:10px;")            
            td(style="text-align: right;padding:10px;")    
              button.btn.btn-primary(style='text-align: center;border-radius: 25px;', type='submit') Purchase  
    .col-md-2        